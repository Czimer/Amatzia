@using Amatzia.Models

@model Amatzia.Models.Recepie

@{
    ViewBag.Title = "New Recepie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Styles.Render("~/Content/Register.css")


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="mainDiv">
        <div class="form-horizontal mainForm">
            <h1>Create your recipe</h1>
            <hr />
            <div>
                @Html.Label("", (string)ViewBag.Message)
            </div>

            <br />
            <div class="form-group">
                @Html.EditorFor(recepie => recepie.Name, new { htmlAttributes = new { @class = "form-control col-md-6", placeholder = @Html.DisplayNameFor(recepie => recepie.Name) } })
                @Html.ValidationMessageFor(recepie => recepie.Name, "", new { @class = "text-danger col-md-6" })
            </div>

            <br />
            <div class="form-group">
                @Html.EditorFor(recepie => recepie.Ingredients, new { htmlAttributes = new { @class = "form-control col-md-6", placeholder = @Html.DisplayNameFor(recepie => recepie.Ingredients) } })
                @Html.ValidationMessageFor(recepie => recepie.Ingredients, "", new { @class = "text-danger col-md-6" })
            </div>

            <br />
            <div class="form-group">
                @Html.EditorFor(recepie => recepie.Instructions, new { htmlAttributes = new { @class = "form-control col-md-6", placeholder = @Html.DisplayNameFor(recepie => recepie.Instructions) } })
                @Html.ValidationMessageFor(recepie => recepie.Instructions, "", new { @class = "text-danger col-md-6" })
            </div>

            <br />
            <div class="form-group">
                @Html.EditorFor(recepie => recepie.Difficulty, new { htmlAttributes = new { @class = "form-control col-md-6", placeholder = @Html.DisplayNameFor(recepie => recepie.Difficulty) } })
                @Html.ValidationMessageFor(recepie => recepie.Difficulty, "", new { @class = "text-danger col-md-6" })
            </div>

            <br />
            <div class="form-group">
                @Html.EditorFor(recepie => recepie.duration, new { htmlAttributes = new { @class = "form-control col-md-6", placeholder = @Html.DisplayNameFor(recepie => recepie.duration) } })
                @Html.ValidationMessageFor(recepie => recepie.duration, "", new { @class = "text-danger col-md-6" })
            </div>

            <br />
            <div class="form-group">
                @Html.EditorFor(recepie => recepie.UploadDate, new { htmlAttributes = new { @class = "form-control col-md-6", placeholder = @Html.DisplayNameFor(recepie => recepie.UploadDate) } })
                @Html.ValidationMessageFor(recepie => recepie.UploadDate, "", new { @class = "text-danger col-md-6" })
            </div>

            <br />
            <div class="form-group submitButton">
                <input type="submit" value="Create" class="btn-primary btn-login" />
                <input type="button" value="Cancel" class="btn-danger btn-login" />
            </div>
        </div>
    </div>
}
