@model Amatzia.Models.Recepie

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@Styles.Render("~/Content/UserEdit.css",
               "https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css")


<div class="mainDiv">
    <div class="login-form mainForm">
        <h1>Edit recipe</h1>
        <hr />

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(recepie => recepie.Id)

            <div class="form-group">
                @Html.LabelFor(recepie => recepie.Name, htmlAttributes: new { @class = "title col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(recepie => recepie.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(recepie => recepie.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(recepie => recepie.Ingredients, htmlAttributes: new { @class = "title col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(recepie => recepie.Ingredients, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(recepie => recepie.Ingredients, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(recepie => recepie.Instructions, htmlAttributes: new { @class = "title col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(recepie => recepie.Instructions, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(recepie => recepie.Instructions, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(recepie => recepie.Difficulty, htmlAttributes: new { @class = "title col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(recepie => recepie.Difficulty, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(recepie => recepie.Difficulty, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(recepie => recepie.duration, htmlAttributes: new { @class = "title col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(recepie => recepie.duration, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(recepie => recepie.duration, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(recepie => recepie.UserId, htmlAttributes: new { @class = "title col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(recepie => recepie.UserId, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(recepie => recepie.UserId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(recepie => recepie.UploadDate, htmlAttributes: new { @class = "title col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(recepie => recepie.UploadDate, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(recepie => recepie.UploadDate, "", new { @class = "text-danger" })
                </div>
            </div>

            <br />
            <div>
                @Html.Label("", (string)ViewBag.Message)
            </div>
            <p>
                <div class="form-group submitButton">
                    <button class="btn-link btn-login" onclick="location.href='@Url.Action("Index", "Recepie")'">
                        <i class="fa fa-arrow-left icons"></i>
                    </button>
                    <input type="submit" value="Save" class="btn-primary btn-login" />
            </p>
        </div>
        }
        </div>
    </div>