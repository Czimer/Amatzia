@model IEnumerable<Amatzia.Models.Recepie>

@{
    ViewBag.Title = "Recepies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Styles.Render("~/Content/Recipes.css", "~/Content/Bootstrap.css")

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div>
        <br />
        <a href="@Url.Action("Create", "Recepie")">Add a recepie</a>
    </div>
    <br />

    <table id="modelTable" class="table">
        <tr>
            <th>@Html.DisplayNameFor(recepie => recepie.Name)</th>
            <th>@Html.DisplayNameFor(recepie => recepie.Ingredients)</th>
            <th>@Html.DisplayNameFor(recepie => recepie.Instructions)</th>
            <th>@Html.DisplayNameFor(recepie => recepie.Difficulty)</th>
            <th>@Html.DisplayNameFor(recepie => recepie.UserId)</th>
            <th>@Html.DisplayNameFor(recepie => recepie.duration)</th>
            <th>@Html.DisplayNameFor(recepie => recepie.UploadDate)</th>
            <th></th>
        </tr>
    </table>
    <div class="loginDiv">
        <div class="loginForm form-horizontal">
            <h1>@ViewBag.Title</h1>

            <hr />
            <div class="flex-container">
                @if (Model.Count() > 0)
                {
                    foreach (var recepie in Model)
                    {
                        <a class="link" href="@Url.Action("Details", "Recepie")">
                            <div class="recipe">
                                <label>
                                    @Html.DisplayFor(modelItem => recepie.Name)
                                    by
                                    @Html.DisplayFor(modelItem => recepie.UserId)
                                </label>
                                <br />
                                <label>Duration:</label>
                                @Html.DisplayFor(modelItem => recepie.duration)
                                <br />
                                <label>Difficulty:</label>
                                @Html.DisplayFor(modelItem => recepie.Difficulty)
                            </div>
                        </a>
                    }
                }
                <button class="fab">
                    <a class="link" href="@Url.Action("Create", "Recepie")">+</a>
                </button>
            </div>
            <hr />
        </div>
    </div>
}
