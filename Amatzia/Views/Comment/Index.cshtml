@model IEnumerable<Amatzia.Models.Comment>

<div id="mainContent">
    <table class="table">
        <tr>
            <th>
                Recepie's Name
            </th>
            <th>
                @Html.DisplayNameFor(comment => comment.Title)
            </th>
            <th>
                @Html.DisplayNameFor(comment => comment.User.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(comment => comment.Content)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RecepieId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Content)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </table>

    <div>
        @Html.ActionLink("Back to Recepies", "Index", "Post")
    </div>
</div>