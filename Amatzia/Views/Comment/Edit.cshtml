@model Amatzia.Models.Comment

@Styles.Render("~/Styles/Model.css")

<div id="mainContent">
    <h2>Edit</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Comment</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(comment => comment.Id)
            @Html.HiddenFor(comment => comment.RecepieId)

            <div class="form-group">
                @Html.LabelFor(comment => comment.Title, htmlAttributes: new { @class = "control-label col-md-4" })
                <span class="col-md-8">
                    @Html.EditorFor(comment => comment.Title, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(comment => comment.Title, "", new { @class = "text-danger" })
                </span>
               
                @Html.LabelFor(comment => comment.Content, htmlAttributes: new { @class = "control-label col-md-4" })
                <span class="col-md-8">
                    @Html.EditorFor(comment => comment.Content, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(comment => comment.Content, "", new { @class = "text-danger" })
                </span>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>