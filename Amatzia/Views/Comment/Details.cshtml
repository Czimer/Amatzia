@model Amatzia.Models.Comment

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Styles.Render("~/Content/RecipeDetails.css",
    "https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css")

<div class="loginDiv">
    <div class="loginForm form-horizontal">
        <h1>Comment Details</h1>
        <div id="modelDetails">
            <hr />
            <div>
                <span class="title">
                    @Html.DisplayNameFor(comment => comment.RecepieId)
                </span>
                @Html.DisplayFor(comment => comment.RecepieId)
            </div>
            <div>
                <span class="title">
                    @Html.DisplayNameFor(comment => comment.Title)
                </span>
                @Html.DisplayFor(comment => comment.Title)
            </div>
            <div>
                <span class="title">
                    @Html.DisplayNameFor(comment => comment.User.UserName)
                </span>
                @Html.DisplayFor(comment => comment.User.UserName)
            </div>
            <div>
                <span class="title">
                    @Html.DisplayNameFor(comment => comment.Content)
                </span>
                @Html.DisplayFor(comment => comment.Content)
            </div>
        </div>
        <p>
            @Html.ActionLink(".", "Index", new { CommentId = Model.Id }, new { @class = "btn-link btn-login fa fa-arrow-left icons" })

            @Html.ActionLink(".", "Edit", new { Id = Model.Id }, new { @class = "btn-link btn-actions fa fa-edit icons" })
        </p>
    </div>
        </div>
</div>